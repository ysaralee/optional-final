<h1><center>Social To-Do App for CPSC113</center></h1>

{{#if errors}}
<div style="color:red" class="validation-error">
    {{errors}}
</div>
{{/if}}

{{#if currentUser}}
    <h2>Welcome, {{currentUser.name}}!</h2>
    <div>
        <h4><center>Your Tasks:</center></h4>
        <hr>
        <h7><center>Click to check the box if you've completed your task!</center></h7>


        {{#if tasks}}
            <ul>
            {{#each tasks}}
                {{#if this.isComplete}}
                    <li class="tasks-list-item complete-task"> 
                    <span class="task-title">{{this.title}} <b>COMPLETE</b> </span>
                    <form action="/task/complete/{{this._id}}" method="post">
                        <input type="submit" name="toggle-task" class="toggle-task" value="Mark Incomplete">
                    </form>
                    {{#if this.isOwner}} 
                        <form action="/task/delete/{{this._id}}" method="post">
                        <input type="submit" name="delete-task" value="Delete">
                    </form>
                    {{/if}}
                    </li>
                {{else}}
                    <li class="tasks-list-item"> 
                    <span class="task-title">{{this.title}}</span>
                    <form action="/task/complete/{{this._id}}" method="post">
                        <input type="submit" name="toggle-task" class="toggle-task" value="Mark Complete"> 
                    </form> 
                    {{#if this.isOwner}}
                        <form action="/task/delete/{{this._id}}" method="post">
                        <input type="submit" name="delete-task" value="Delete">
                    </form>
                    {{/if}}
                    </li>
                {{/if}}
            {{/each}}
            </ul>
        {{else}}
            No tasks to show!
        {{/if}}
    </div>
    <hr>
   <div>
        <h4>Add a new task</h4>
        <form action="/task/create" method="POST">
            <input name="title" type="text" placeholder="Task Title"><br>
            <input name="description" type="text" placeholder="What To Do?"><br>
            <input name="collaborator1" type="email" placeholder="Email of Collaborator 1"><br>
            <input name="collaborator2" type="email" placeholder="Email of Collaborator 2"><br>
            <input name="collaborator3" type="email" placeholder="Email of Collaborator 3"><br>
            <input type="submit" class="create-task-submit">
        </form>
    </div>

{{else}}
<div>
    <h5><center>Welcome Back! Log-In Here!</center></h5>
    <form class="login" action="/user/login" method="POST"><center>
        <input name="email" id="email" type="text" placeholder="Email"><br>
        <input name="password"  id="password" type="text" placeholder="Password"><br><br>
        <input type="submit"  class="log-in-submit">
    </center></form>
</div>
<br>

<div><hr></div>
<div><hr></div>

<div>
    <h6><center>New to the Site? Register Here:</center></h6>
    <form class="register" action="/user/register" method="POST" class="signup-form" style="display: block;"><center>
      <input name="fl_name" type="text" class="text-input" placeholder="First &amp; Last Name"><br>
      <input name="email" type="email" class="text-input" placeholder="Email"><br>
      <input name="password" type="password" class="text-input" placeholder="Password"><br>
      <input name="password_confirmation" type="password" class="text-input" placeholder="Password Confirmation"><br><br>
      <input class="sign-up-submit" type="submit"><br>
    </center></form>
</div>
{{/if}}
